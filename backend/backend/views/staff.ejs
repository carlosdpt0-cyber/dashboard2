        function saveStaff() {
            const form = document.getElementById('staffForm');
            const staffId = document.getElementById('staffId').value;
            const isEditMode = !!staffId;
            
            // Valida√ß√£o b√°sica
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            // Verificar passwords (apenas em modo cria√ß√£o)
            if (!isEditMode) {
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                
                if (password.length < 8) {
                    showToast('A password deve ter pelo menos 8 caracteres', 'error');
                    return;
                }
                
                if (password !== confirmPassword) {
                    showToast('As passwords n√£o coincidem', 'error');
                    return;
                }
            }
            
            // Preparar dados
            const formData = new FormData(form);
            const data = {
                name: formData.get('name'),
                email: formData.get('email'),
                role: formData.get('role'),
                department: formData.get('department'),
                isActive: document.getElementById('isActive').checked
            };
            
            // Adicionar password apenas em modo cria√ß√£o
            if (!isEditMode) {
                data.password = formData.get('password');
            }
            
            // Determinar URL e m√©todo
            const url = isEditMode ? `/api/staff/${staffId}/update` : '/api/staff/create';
            
            // Mostrar loading
            const saveBtn = document.getElementById('staffModalSave');
            const originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
            saveBtn.disabled = true;
            
            // Enviar requisi√ß√£o
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                // Restaurar bot√£o
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
                
                if (result.success) {
                    showToast(result.message, 'success');
                    document.getElementById('staffModal').style.display = 'none';
                    
                    // Recarregar p√°gina ap√≥s breve delay
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    showToast(result.error || 'Erro ao guardar staff', 'error');
                }
            })
            .catch(error => {
                // Restaurar bot√£o
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
                
                console.error('Erro:', error);
                showToast('Erro ao comunicar com o servidor', 'error');
            });
        }
        
        function toggleStaffStatus() {
            const staffId = document.getElementById('activateStaffId').value;
            const action = document.getElementById('activateAction').value;
            
            if (!staffId || !action) {
                showToast('Dados inv√°lidos', 'error');
