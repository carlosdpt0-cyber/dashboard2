<div class="sidebar" id="sidebar">
    <div class="logo">
        <h2>Casino X</h2>
        <div class="user-mini-info">
            <span id="sidebarStaffName"><%= user.name || '---' %></span>
            <small id="sidebarStaffRole"><%= user.role || '---' %></small>
        </div>
    </div>
    
    <ul class="menu">
        <li><a href="/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>">
            <i class="fas fa-home"></i><span> Dashboard</span>
        </a></li>
        
        <li><a href="/dashboard/jogadores" class="<%= activePage === 'jogadores' ? 'active' : '' %>">
            <i class="fas fa-users"></i><span> Jogadores</span>
        </a></li>
        
        <li class="menu-dropdown">
            <a href="#levantamentos" class="dropdown-toggle <%= activePage === 'levantamentos' ? 'active' : '' %>">
                <i class="fas fa-money-bill-wave"></i><span> Levantamentos</span>
                <i class="fas fa-chevron-down dropdown-icon"></i>
            </a>
            <div class="dropdown-menu">
                <a href="/dashboard/levantamentos/pendentes">
                    <i class="fas fa-clock"></i> Pendentes
                </a>
                <a href="/dashboard/levantamentos/aprovados">
                    <i class="fas fa-check-circle"></i> Aprovados
                </a>
                <a href="/dashboard/levantamentos/recusados">
                    <i class="fas fa-times-circle"></i> Recusados
                </a>
                <a href="/dashboard/levantamentos/historico">
                    <i class="fas fa-history"></i> Histórico
                </a>
            </div>
        </li>
        
        <li class="menu-dropdown">
            <a href="#pagamentos" class="dropdown-toggle <%= activePage === 'pagamentos' ? 'active' : '' %>">
                <i class="fas fa-credit-card"></i><span> Pagamentos</span>
                <i class="fas fa-chevron-down dropdown-icon"></i>
            </a>
            <div class="dropdown-menu">
                <a href="/dashboard/pagamentos/analise">
                    <i class="fas fa-search"></i> Em Análise
                </a>
                <a href="/dashboard/pagamentos/processar">
                    <i class="fas fa-cogs"></i> Processar
                </a>
                <a href="/dashboard/pagamentos/historico">
                    <i class="fas fa-history"></i> Histórico
                </a>
                <a href="/dashboard/pagamentos/metodos">
                    <i class="fas fa-list"></i> Métodos
                </a>
            </div>
        </li>
        
        <li><a href="/dashboard/support" class="<%= activePage === 'support' ? 'active' : '' %>">
            <i class="fas fa-headset"></i><span> Support Tickets</span>
        </a></li>
        
        <li><a href="/dashboard/staff" class="<%= activePage === 'staff' ? 'active' : '' %>">
            <i class="fas fa-user-tie"></i><span> Staff</span>
        </a></li>
        
        <!-- Email Section -->
        <li class="email-section" id="emailMenuItem">
            <a href="/dashboard/email" class="<%= activePage === 'email' ? 'active' : '' %>">
                <i class="fas fa-envelope"></i><span> Email Casino</span>
                <span class="badge" id="emailBadge">0</span>
            </a>
        </li>
        
        <li><a href="/dashboard/logs" class="<%= activePage === 'logs' ? 'active' : '' %>">
            <i class="fas fa-clipboard-list"></i><span> Logs</span>
        </a></li>
        
        <li><a href="/dashboard/settings" class="<%= activePage === 'settings' ? 'active' : '' %>">
            <i class="fas fa-cog"></i><span> Definições</span>
        </a></li>
        
        <!-- Theme Toggle in Sidebar -->
        <li>
            <div class="theme-toggle" onclick="toggleTheme()">
                <input type="checkbox" id="sidebarThemeToggle">
                <div class="toggle-switch"></div>
                <span class="theme-label" id="sidebarThemeLabel">Modo Escuro</span>
            </div>
        </li>
        
        <!-- Logout -->
        <li><a href="javascript:void(0)" onclick="logout()" id="logoutBtn">
            <i class="fas fa-sign-out-alt"></i><span> Logout</span>
        </a></li>
    </ul>
    
    <div class="sidebar-footer">
        <div class="system-status">
            <div class="status-indicator online"></div>
            <span>Sistema Online</span>
        </div>
        <div class="server-time" id="serverTime">--:--:--</div>
    </div>
</div>