            const hasAccepted = localStorage.getItem('velvetwin_terms_accepted');
            const serverAccepted = <%= localAcceptedConfidentiality %>;
            
            if (hasAccepted === 'true' || serverAccepted) {
                showDashboard();
            } else {
                showPopup();
            }
