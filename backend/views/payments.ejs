    <!-- JavaScript -->
    <script>
        // ============ VARI√ÅVEIS GLOBAIS ============
        let notifications = [];
        let currentUser = {
            name: '<%= user.name %>',
            email: '<%= user.email %>',
            role: '<%= user.role %>'
        };

        // ============ SISTEMA DE TEMA ============
        function initTheme() {
            const savedTheme = localStorage.getItem('casinoX-theme') || 'dark';
            document.documentElement.setAttribute('data-theme', savedTheme);
            updateThemeUI(savedTheme);
        }
        
        function updateThemeUI(theme) {
            const labels = document.querySelectorAll('.theme-label');
            const toggles = document.querySelectorAll('.theme-toggle');
            
            labels.forEach(label => {
                label.textContent = theme === 'light' ? 'Modo Claro' : 'Modo Escuro';
            });
            
            toggles.forEach(toggle => {
                toggle.setAttribute('data-theme', theme);
            });
        }
        
        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'dark';
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('casinoX-theme', newTheme);
            updateThemeUI(newTheme);
            
            showToast(`üåû Modo ${newTheme === 'light' ? 'Claro' : 'Escuro'} ativado`, 'success');
        }

        // ============ SIDEBAR E MENU ============
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            
            if (window.innerWidth <= 1024) {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
            } else {
                sidebar.classList.toggle('collapsed');
            }
        }
        
        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        }

        // ============ DROPDOWN DO USU√ÅRIO ============
        function toggleUserDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        // ============ NOTIFICA√á√ïES ============
        function showNotifications() {
            const modal = document.getElementById('notificationsModal');
            modal.style.display = 'flex';
            loadNotifications();
        }
        
        function closeNotificationsModal() {
            document.getElementById('notificationsModal').style.display = 'none';
        }
        
        function loadNotifications() {
            const saved = localStorage.getItem('casino-notifications');
            if (saved) {
                notifications = JSON.parse(saved);
            }
            renderNotifications();
        }
        
        function renderNotifications() {
            const container = document.getElementById('notificationsList');
            const countElement = document.getElementById('notificationCount');
            
            if (!notifications || notifications.length === 0) {
                container.innerHTML = `
                    <div class="empty-notifications">
                        <i class="fas fa-bell-slash"></i>
                        <p>Sem notifica√ß√µes no momento</p>
                    </div>
                `;
                countElement.classList.remove('show');
                return;
            }
            
            const unreadCount = notifications.filter(n => !n.read).length;
            countElement.textContent = unreadCount;
            countElement.classList.toggle('show', unreadCount > 0);
            
            container.innerHTML = notifications.map(n => `
                <div class="notification-item ${n.read ? 'read' : 'unread'}" 
                     onclick="markNotificationAsRead('${n.id}')">
                    <div class="notification-icon ${n.type || 'info'}">
                        <i class="fas fa-${getNotificationIcon(n.type)}"></i>
                    </div>
                    <div class="notification-content">
                        <div class="notification-title">${n.title}</div>
                        <div class="notification-message">${n.message}</div>
                        <div class="notification-time">${formatTime(n.createdAt)}</div>
                    </div>
                </div>
            `).join('');
        }
        
        function getNotificationIcon(type) {
            switch(type) {
                case 'success': return 'check-circle';
                case 'warning': return 'exclamation-triangle';
                case 'danger': return 'exclamation-circle';
                case 'info': 
                default: return 'info-circle';
            }
        }
        
        function markNotificationAsRead(id) {
            const notification = notifications.find(n => n.id === id);
            if (notification) {
                notification.read = true;
                localStorage.setItem('casino-notifications', JSON.stringify(notifications));
                renderNotifications();
            }
        }
        
        function markAllAsRead() {
            notifications.forEach(n => n.read = true);
            localStorage.setItem('casino-notifications', JSON.stringify(notifications));
            renderNotifications();
            showToast('Todas as notifica√ß√µes marcadas como lidas', 'success');
        }
        
        function clearAllNotifications() {
            if (!confirm('Tem certeza que deseja limpar todas as notifica√ß√µes?')) return;
            
            notifications = [];
            localStorage.setItem('casino-notifications', JSON.stringify(notifications));
            renderNotifications();
            showToast('Todas as notifica√ß√µes foram limpas', 'success');
        }
        
        function formatTime(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return 'Agora mesmo';
            if (minutes < 60) return `H√° ${minutes} minuto${minutes > 1 ? 's' : ''}`;
            if (hours < 24) return `H√° ${hours} hora${hours > 1 ? 's' : ''}`;
            if (days === 1) return 'Ontem';
            if (days < 7) return `H√° ${days} dia${days > 1 ? 's' : ''}`;
            return date.toLocaleDateString('pt-PT');
        }

        // ============ FUN√á√ïES DE PAGAMENTOS ============
        async function viewPayment(paymentId) {
            showToast(`A carregar detalhes do pagamento #${paymentId}...`, 'info');
            
            try {
                // Simular API call
                await new Promise(resolve => setTimeout(resolve, 500));
                showToast(`Visualizando pagamento #${paymentId}`, 'info');
            } catch (error) {
                showToast('Erro ao carregar detalhes', 'error');
            }
        }
        
        async function approvePayment(paymentId) {
            if (confirm(`Deseja aprovar o pagamento #${paymentId}?`)) {
                showToast(`A processar aprova√ß√£o do pagamento #${paymentId}...`, 'info');
                
                try {
                    // Simular API call
                    await new Promise(resolve => setTimeout(resolve, 800));
                    
                    showToast(`Pagamento #${paymentId} aprovado com sucesso!`, 'success');
                    
                    // Adicionar notifica√ß√£o
                    addNotification({
                        id: Date.now().toString(),
                        title: 'Pagamento Aprovado',
                        message: `Pagamento #${paymentId} foi aprovado com sucesso.`,
                        type: 'success',
                        read: false,
                        createdAt: new Date().toISOString()
                    });
                    
                    // Recarregar p√°gina ap√≥s 1 segundo
                    setTimeout(() => location.reload(), 1000);
                    
                } catch (error) {
                    showToast('Erro ao aprovar pagamento', 'error');
                }
            }
        }
        
        async function rejectPayment(paymentId) {
            if (confirm(`Deseja rejeitar o pagamento #${paymentId}?`)) {
                showToast(`A processar rejei√ß√£o do pagamento #${paymentId}...`, 'info');
                
                try {
                    // Simular API call
                    await new Promise(resolve => setTimeout(resolve, 800));
                    
                    showToast(`Pagamento #${paymentId} rejeitado.`, 'warning');
                    
                    // Adicionar notifica√ß√£o
                    addNotification({
                        id: Date.now().toString(),
                        title: 'Pagamento Rejeitado',
                        message: `Pagamento #${paymentId} foi rejeitado.`,
                        type: 'danger',
                        read: false,
                        createdAt: new Date().toISOString()
                    });
                    
                    // Recarregar p√°gina ap√≥s 1 segundo
                    setTimeout(() => location.reload(), 1000);
                    
                } catch (error) {
                    showToast('Erro ao rejeitar pagamento', 'error');
                }
            }
        }
        
        async function editPayment(paymentId) {
            showToast(`Abrindo edi√ß√£o do pagamento #${paymentId}...`, 'info');
            
            try {
                // Simular API call
                await new Promise(resolve => setTimeout(resolve, 500));
                showToast(`Editando pagamento #${paymentId}`, 'info');
            } catch (error) {
                showToast('Erro ao carregar dados para edi√ß√£o', 'error');
            }
        }
        
        function addNotification(notification) {
            notifications.unshift(notification);
            localStorage.setItem('casino-notifications', JSON.stringify(notifications));
            renderNotifications();
        }

        // ============ EXPORTA√á√ÉO CSV ============
        function exportToCSV() {
            showToast('A gerar ficheiro CSV...', 'info');
            
            try {
                const table = document.querySelector('table');
                if (!table) {
                    showToast('Nenhuma tabela encontrada para exportar', 'error');
                    return;
                }
                
                // Obter cabe√ßalhos
                const headers = [];
                const headerCells = table.querySelectorAll('thead th');
                headerCells.forEach(header => {
                    headers.push(header.textContent.trim());
                });
                
                // Obter dados
                const rows = [];
                const dataRows = table.querySelectorAll('tbody tr');
                
                dataRows.forEach(row => {
                    const rowData = [];
                    const cells = row.querySelectorAll('td');
                    
                    cells.forEach((cell, index) => {
                        // Remover bot√µes e √≠cones do conte√∫do
                        if (index === cells.length - 1) {
                            // √öltima coluna (a√ß√µes) - ignorar
                            rowData.push('A√ß√µes');
                        } else {
                            let text = cell.textContent.trim();
                            // Limpar texto
                            text = text.replace(/\n/g, ' ').replace(/\s+/g, ' ');
                            rowData.push(`"${text}"`);
                        }
                    });
                    
                    rows.push(rowData.join(','));
                });
                
                // Criar conte√∫do CSV
                const csvContent = [
                    headers.join(','),
                    ...rows
                ].join('\n');
                
                // Criar blob e download
                const blob = new Blob(['\uFEFF' + csvContent], { type: 'text/csv;charset=utf-8;' });
                const url = URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.setAttribute('href', url);
                link.setAttribute('download', `pagamentos_${new Date().toISOString().split('T')[0]}.csv`);
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                URL.revokeObjectURL(url);
                
                showToast('Ficheiro CSV exportado com sucesso!', 'success');
                
                // Adicionar notifica√ß√£o
                addNotification({
                    id: Date.now().toString(),
                    title: 'Exporta√ß√£o CSV',
                    message: `Exporta√ß√£o de pagamentos conclu√≠da com sucesso.`,
                    type: 'success',
                    read: false,
                    createdAt: new Date().toISOString()
                });
                
            } catch (error) {
                console.error('Erro ao exportar CSV:', error);
                showToast('Erro ao exportar CSV', 'error');
            }
        }

        // ============ ATUALIZAR DADOS ============
        async function refreshData() {
            showToast('A atualizar dados...', 'info');
            
            try {
                // Adicionar efeito visual de loading
                const refreshBtn = document.getElementById('refreshBtn');
                const originalHtml = refreshBtn.innerHTML;
                refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Atualizando...';
                refreshBtn.disabled = true;
                
                // Simular chamada √† API
                await new Promise(resolve => setTimeout(resolve, 1200));
                
                // Recarregar p√°gina
                location.reload();
                
            } catch (error) {
                showToast('Erro ao atualizar dados', 'error');
            }
        }

        // ============ FILTROS REAIS ============
        function applyFilters() {
            const status = document.getElementById('statusFilter').value;
            const method = document.getElementById('methodFilter').value;
            const search = document.getElementById('searchInput').value.toLowerCase();
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            let filterMessage = 'Filtros aplicados:';
            const filters = [];
            
            if (status) filters.push(`Status: ${status}`);
            if (method) filters.push(`M√©todo: ${method}`);
            if (search) filters.push(`Pesquisa: "${search}"`);
            if (startDate || endDate) filters.push(`Per√≠odo: ${startDate || '...'} at√© ${endDate || '...'}`);
            
            filterMessage = filters.length > 0 ? filters.join(' | ') : 'Todos os filtros limpos';
            
            showToast(filterMessage, 'info');
            
            // Aplicar filtros na tabela
            const rows = document.querySelectorAll('table tbody tr');
            let visibleCount = 0;
            
            rows.forEach(row => {
                let showRow = true;
                
                // Filtro por status
                if (status) {
                    const statusBadge = row.querySelector('.status-badge');
                    if (statusBadge) {
                        const rowStatus = statusBadge.textContent.toLowerCase();
                        if (!rowStatus.includes(status)) {
                            showRow = false;
                        }
                    }
                }
                
                // Filtro por m√©todo
                if (method && showRow) {
                    const methodBadge = row.querySelector('.method-badge');
                    if (methodBadge) {
                        const rowMethod = methodBadge.textContent.toLowerCase();
                        if (!rowMethod.includes(method)) {
                            showRow = false;
                        }
                    }
                }
                
                // Filtro por pesquisa
                if (search && showRow) {
                    const rowText = row.textContent.toLowerCase();
                    if (!rowText.includes(search)) {
                        showRow = false;
                    }
                }
                
                // Filtro por data
                if ((startDate || endDate) && showRow) {
                    const dateCell = row.cells[5]; // Coluna de data
                    if (dateCell) {
                        const dateText = dateCell.textContent;
                        const rowDate = extractDateFromText(dateText);
                        
                        if (rowDate) {
                            if (startDate && rowDate < new Date(startDate)) {
                                showRow = false;
                            }
                            if (endDate && rowDate > new Date(endDate)) {
                                showRow = false;
                            }
                        }
                    }
                }
                
                // Aplicar visibilidade
                row.style.display = showRow ? '' : 'none';
                if (showRow) visibleCount++;
            });
            
            // Atualizar contador
            const paginationInfo = document.querySelector('.pagination-info');
            if (paginationInfo) {
                paginationInfo.textContent = `Mostrando ${Math.min(visibleCount, 10)} de ${visibleCount} pagamentos`;
            }
        }
        
        function extractDateFromText(text) {
            try {
                // Tentar extrair data do texto da c√©lula
                const dateMatch = text.match(/\d{1,2}\/\d{1,2}\/\d{4}/);
                if (dateMatch) {
                    const parts = dateMatch[0].split('/');
                    return new Date(parts[2], parts[1] - 1, parts[0]);
                }
            } catch (e) {
                console.warn('Erro ao extrair data:', e);
            }
            return null;
        }
        
        function resetFilters() {
            document.getElementById('statusFilter').value = '';
            document.getElementById('methodFilter').value = '';
            document.getElementById('searchInput').value = '';
            
            // Reset datas para os √∫ltimos 30 dias
            const today = new Date().toISOString().split('T')[0];
            const thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
            
            document.getElementById('endDate').value = today;
            document.getElementById('startDate').value = thirtyDaysAgo.toISOString().split('T')[0];
            
            // Mostrar todas as linhas
            const rows = document.querySelectorAll('table tbody tr');
            rows.forEach(row => row.style.display = '');
            
            // Atualizar contador
            const totalPayments = rows.length;
            const paginationInfo = document.querySelector('.pagination-info');
            if (paginationInfo) {
                paginationInfo.textContent = `Mostrando ${Math.min(totalPayments, 10)} de ${totalPayments} pagamentos`;
            }
            
            showToast('Filtros limpos', 'success');
        }

        // ============ FUN√á√ïES AUXILIARES ============
        function showToast(message, type = 'info') {
            // Remover toasts antigos
            document.querySelectorAll('.toast').forEach(t => t.remove());
            
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 
                                 type === 'error' ? 'exclamation-circle' : 
                                 type === 'warning' ? 'exclamation-triangle' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOutRight 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }
        
        function updateServerTime() {
            const now = new Date();
            const element = document.getElementById('serverTime');
            if (element) {
                element.textContent = now.toLocaleTimeString('pt-PT');
            }
        }
        
        function logoutUser() {
            if (confirm('Tem certeza que deseja sair?')) {
                window.location.href = '/logout';
            }
        }
        
        function navigateTo(url) {
            window.location.href = url;
        }

        // ============ INICIALIZA√á√ÉO ============
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inicializando p√°gina de pagamentos...');
            
