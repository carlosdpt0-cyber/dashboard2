        }

        .theme-toggle[data-theme="light"] .toggle-switch {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .toggle-switch::before {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            left: 3px;
            top: 3px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
